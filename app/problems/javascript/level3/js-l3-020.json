    "async function retry(fn, maxAttempts) {",
    "  for (let i = 0; i < maxAttempts; i++) {",
    "    try {",
    "      return await fn();",
    "    } catch (error) {",
    "      if (i === maxAttempts - 1) throw error;",
    "    }",
    "  }",
    "}"
